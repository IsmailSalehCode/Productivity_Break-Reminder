  "devDependencies": {
    "@vitejs/plugin-vue": "^4.6.2",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^25.1.0",
    "electron-builder": "^23.6.0",
    "eslint": "^8.37.0",
    "eslint-plugin-vue": "^9.3.0",
    "sass": "^1.60.0",
    "typescript": "^5.3.3",
    "vite": "^4.5.2",
    "vite-plugin-vuetify": "^1.0.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.ismailsalehcode.break-reminder",
    "productName": "Break reminder",
    "copyright": "Â© 2024 Ismail Saleh",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "nsis": {
